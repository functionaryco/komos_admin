<div>
  <table>
    <tr>
      <th>
        Name
      </th>
      <th>Amount </th>
    </tr>
    <%=for adjustment<- @adjustments do %>
      <tr>
        <td>
          <%=adjustment_name(@conn,@context, @resource, adjustment) %>
        </td>
        <td>
          <%=adjustment.amount %>
        </td>
      </tr>
    <% end %>
  </table>
</div>
